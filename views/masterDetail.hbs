<!-- Modal new Master-Detail object -->
<div class="modal fade" id="newMasterDetailObject" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">New Master-Detail object</h4>
			</div>
			<div class="modal-body">
				<form data-toggle="validator" id="newMasterDetailObjectForm">
					<div class="form-group required">
						<label class="control-label">Name</label> <input type="text" class="form-control" id="name" required>
						<div class="help-block with-errors"></div>
					</div>
					<div class="form-group">
						<label class="control-label">body__c</label> <input type="text" class="form-control" id="body__c">
					</div>
					<button type="button" class="btn btn-primary" id="submit">Add</button>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Modal edit App -->
<div class="modal fade" id="editMasterObject" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Edit Master object</h4>
			</div>
			<div class="modal-body">
				<form data-toggle="validator" id="updateMasterObjectForm">
					<div class="form-group">
						<input type="hidden" class="form-control" id="idMasterObject" value="" name="idMasterObject">
						<input type="hidden" class="form-control" id="masterObjectSystemModStamp" value="" name="masterObjectSystemModStamp">
						<input type="hidden" class="form-control" id="masterObjectCreatedDate" value="" name="masterObjectCreatedDate">
						<input type="hidden" class="form-control" id="masterObjectIsDeleted" value="" name="masterObjectIsDeleted">
						<input type="hidden" class="form-control" id="masterObjectMasterExternalId" value="">
					</div>
					<div class="form-group">
						<label class="control-label">Name</label> <input type="text" class="form-control" id="masterObjectName" value="" name="masterObjectName"
							required>
						<div class="help-block with-errors"></div>
					</div>
					<div class="form-group">
						<label class="control-label">Body</label> <input type="tel" class="form-control" id="masterObjectBody" value="" name="masterObjectBody" required>
						<div class="help-block with-errors"></div>
					</div>
					<button type="button" class="btn btn-primary" id="editMaster">Edit</button>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Modal delete App -->
<div class="modal fade" id="deleteMasterO" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Delete Master Object</h4>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to delete this row?</p>
				<output type="text" name="rowIndex" id="rowIndex" value="" hidden />
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal" id="deleteMaster">Delete</button>
			</div>
		</div>
	</div>
</div>

